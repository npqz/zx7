<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Vespura Menu</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: transparent;
            color: #ffffff;
            margin: 0;
            padding: 0;
            user-select: none;
        }
        .menu-container {
            position: absolute;
            right: 20px;
            top: 20px;
            width: 300px;
            background: rgba(40, 40, 40, 0.95);
            border: 1px solid #2a2a2a;
            border-radius: 5px;
            overflow: hidden;
        }
        .menu-header {
            background: #2978b9;
            padding: 10px;
            text-align: center;
            font-size: 18px;
            font-weight: bold;
            color: #ffffff;
        }
        .menu-title {
            background: #1a1a1a;
            padding: 5px;
            display: flex;
            justify-content: space-between;
            font-size: 14px;
        }
        .menu-items {
            max-height: 300px;
            overflow-y: auto;
        }
        .menu-item {
            padding: 8px;
            font-size: 12px;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .menu-item.selected {
            background: #3c3c3c;
        }
        .menu-item:hover {
            background: #4a4a4a;
        }
        .menu-item.toggle-enabled {
            color: #64ff64;
        }
        .menu-item.toggle-disabled {
            color: #ff6464;
        }
        .menu-subtitle {
            background: #1a1a1a;
            padding: 5px;
            text-align: center;
            font-size: 11px;
            color: #b0b0b0;
        }
        .menu-navigation {
            text-align: center;
            padding: 5px;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="menu-container" id="menu" style="display: none;">
        <div class="menu-header">Vespura</div>
        <div class="menu-title">
            <span id="menu-title"></span>
            <span id="page-info"></span>
        </div>
        <div class="menu-items" id="menu-items"></div>
        <div class="menu-subtitle" id="menu-subtitle"></div>
        <div class="menu-navigation">◇</div>
    </div>
    <script>
        let currentItems = [];
        let selectedIndex = 0;

        window.addEventListener("message", (event) => {
            const data = event.data;
            if (data.type === "updateMenu") {
                document.getElementById("menu").style.display = "block";
                document.getElementById("menu-title").textContent = data.title;
                document.getElementById("page-info").textContent = data.pageInfo;
                document.getElementById("menu-subtitle").textContent = data.subtitle;
                
                const itemsContainer = document.getElementById("menu-items");
                itemsContainer.innerHTML = "";
                currentItems = data.items;
                selectedIndex = currentItems.findIndex(item => item.isSelected);
                
                currentItems.forEach((item, index) => {
                    const itemElement = document.createElement("div");
                    itemElement.className = `menu-item ${item.isSelected ? "selected" : ""} ${item.toggle ? (item.state ? "toggle-enabled" : "toggle-disabled") : ""}`;
                    itemElement.innerHTML = `
                        <span>${item.name}</span>
                        ${item.hasSubmenu ? '<span>→→→</span>' : ''}
                    `;
                    itemElement.addEventListener("click", () => {
                        fetch(`https://vespura_menu/menuAction`, {
                            method: "POST",
                            body: JSON.stringify({ action: "select", index })
                        });
                    });
                    itemsContainer.appendChild(itemElement);
                });
            }
        });

        document.addEventListener("keydown", (event) => {
            if (event.key === "ArrowUp") {
                fetch(`https://vespura_menu/menuAction`, {
                    method: "POST",
                    body: JSON.stringify({ action: "navigate", direction: "up" })
                });
            } else if (event.key === "ArrowDown") {
                fetch(`https://vespura_menu/menuAction`, {
                    method: "POST",
                    body: JSON.stringify({ action: "navigate", direction: "down" })
                });
            } else if (event.key === "Enter") {
                fetch(`https://vespura_menu/menuAction`, {
                    method: "POST",
                    body: JSON.stringify({ action: "select", index: selectedIndex })
                });
            } else if (event.key === "Backspace") {
                fetch(`https://vespura_menu/menuAction`, {
                    method: "POST",
                    body: JSON.stringify({ action: "back" })
                });
            }
        });
    </script>
</body>
</html>
