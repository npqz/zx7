                "title": {
                    "display": true,
                    "text": "Toggle State",
                    "color": "#ffffff"
                }
            },
            "x": {
                "title": {
                    "display": true,
                    "text": "Menu Options",
                    "color": "#ffffff"
                }
            }
        },
        "plugins": {
            "legend": {
                "labels": {
                    "color": "#ffffff"
                }
            },
            "title": {
                "display": true,
                "text": "Vespura Menu Toggle States",
                "color": "#ffffff"
            }
        },
        "layout": {
            "padding": 20
        }
    }
