{
    "type": "bar",
    "data": {
        "labels": ["God Mode", "Infinite Stamina", "Super Jump", "No Clip", "Infinite Ammo", "Never Wanted", "PVP Mode"],
        "datasets": [{
            "label": "Toggle State (1 = Enabled, 0 = Disabled)",
            "data": [0, 0, 0, 0, 0, 0, 0],
            "backgroundColor": [
                "rgba(100, 255, 100, 0.7)",
                "rgba(100, 255, 100, 0.7)",
                "rgba(100, 255, 100, 0.7)",
                "rgba(100, 255, 100, 0.7)",
                "rgba(100, 255, 100, 0.7)",
                "rgba(100, 255, 100, 0.7)",
                "rgba(100, 255, 100, 0.7)"
            ],
            "borderColor": [
                "rgba(50, 150, 50, 1)",
                "rgba(50, 150, 50, 1)",
                "rgba(50, 150, 50, 1)",
                "rgba(50, 150, 50, 1)",
                "rgba(50, 150, 50, 1)",
                "rgba(50, 150, 50, 1)",
                "rgba(50, 150, 50, 1)"
            ],
            "borderWidth": 1
        }]
    },
    "options": {
        "responsive": true,
        "maintainAspectRatio": false,
        "scales": {
            "y": {
                "beginAtZero": true,
                "max": 1,
                "ticks": {
